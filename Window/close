    <h1>Window Open</h1>
    <button id="kloj">Close New Window</button>

    <script>
      var newWindow = window.open(
        "http://www.twitter.com",
        "_blank",
        "width=200, height=200"
      );
      function ekjit() {
        newWindow.close();
      }
      document.getElementById("kloj").addEventListener("click", ekjit);

      /*
